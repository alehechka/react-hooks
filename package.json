{
  "version": "1.1.0",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint src test",
    "lint:fix": "tsdx lint src test --fix",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": "@alehechka/react-ts-config/.prettierrc.json",
  "name": "@alehechka/react-hooks",
  "author": "Adam Lehechka (https://github.com/alehechka)",
  "module": "dist/react-hooks.esm.js",
  "size-limit": [
    {
      "path": "dist/react-hooks.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-hooks.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@alehechka/react-ts-config": "^1.0.6",
    "@size-limit/preset-small-lib": "^4.10.2",
    "@testing-library/react-hooks": "^5.1.1",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.1.1",
    "**/@typescript-eslint/parser": "^4.1.1"
  }
}
